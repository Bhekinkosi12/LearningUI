<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:tab="clr-namespace:Syncfusion.XForms.TabView;assembly=Syncfusion.SfTabView.XForms"

             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:Local="clr-namespace:OwnAndroid.ModelViews"
            NavigationPage.HasNavigationBar="False"
             NavigationPage.HasBackButton="False"
             
             x:Class="OwnAndroid.Layout.BT_Tabbed">

    <ContentPage.BindingContext>
        <Local:ViewModel />


    </ContentPage.BindingContext>
 


        <tab:SfTabView  Items="{Binding Items}" TabHeaderPosition="Bottom" 
                        TabHeaderBackgroundColor="Silver"
                         ScrollButtonBackgroundColor="Silver"
                        TabHeight="45"
                         
                         
                        ScrollButtonForegroundColor="White"    >
          
        </tab:SfTabView>
   
</ContentPage>